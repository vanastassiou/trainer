{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Training Goal",
  "description": "A user-defined fitness goal with target and deadline",
  "type": "object",
  "required": ["id", "type", "metric", "target", "direction"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier"
    },
    "type": {
      "type": "string",
      "description": "Goal category",
      "enum": ["body", "strength", "habit"]
    },
    "metric": {
      "type": "string",
      "description": "The metric being tracked",
      "enum": [
        "weight",
        "bodyFat",
        "restingHR",
        "waist",
        "chest",
        "calories",
        "protein",
        "fiber",
        "water",
        "steps",
        "sleep",
        "recovery",
        "workoutsPerWeek"
      ]
    },
    "target": {
      "type": "number",
      "description": "Target value for the metric"
    },
    "unit": {
      "type": "string",
      "description": "Unit of measurement",
      "enum": ["kg", "%", "bpm", "cm", "kcal", "g", "L", "hrs", "count"]
    },
    "direction": {
      "type": "string",
      "description": "Whether to increase or decrease the metric",
      "enum": ["increase", "decrease", "maintain"]
    },
    "deadline": {
      "type": ["string", "null"],
      "description": "Target date in YYYY-MM-DD format",
      "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of creation",
      "format": "date-time"
    },
    "completedAt": {
      "type": ["string", "null"],
      "description": "ISO 8601 timestamp when goal was achieved",
      "format": "date-time"
    }
  }
}
