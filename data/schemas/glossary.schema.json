{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Glossary Database",
  "description": "Fitness and kinesiology terminology definitions",
  "type": "object",
  "required": ["glossary"],
  "properties": {
    "version": {
      "type": "integer",
      "description": "Schema version number"
    },
    "lastUpdated": {
      "type": "string",
      "description": "Date of last update (YYYY-MM-DD)",
      "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
    },
    "glossary": {
      "type": "object",
      "required": ["categories", "terms"],
      "properties": {
        "categories": {
          "type": "object",
          "description": "Category definitions",
          "additionalProperties": {
            "type": "string"
          }
        },
        "terms": {
          "type": "object",
          "description": "Map of term slug to term definition",
          "additionalProperties": {
            "type": "object",
            "required": ["name", "category", "description"],
            "properties": {
              "name": {
                "type": "string",
                "description": "Display name of the term"
              },
              "aliases": {
                "type": "array",
                "description": "Alternative names or abbreviations",
                "items": {
                  "type": "string"
                }
              },
              "category": {
                "type": "string",
                "description": "Term category",
                "enum": ["anatomy", "basic", "biometrics", "direction", "kinesiology", "movement", "nutrition", "programming", "recovery", "research", "technique"]
              },
              "description": {
                "type": "string",
                "description": "Brief plain-language definition (shown immediately)"
              },
              "details": {
                "type": "string",
                "description": "Extended explanation (shown under 'more details' fold)"
              },
              "references": {
                "type": "array",
                "description": "Source references",
                "items": {
                  "$ref": "#/definitions/reference"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "reference": {
      "oneOf": [
        {
          "type": "object",
          "description": "External reference with source name",
          "required": ["source", "url"],
          "additionalProperties": false,
          "properties": {
            "source": {
              "type": "string",
              "description": "Source identifier (e.g., exrx, pubmed)"
            },
            "url": {
              "type": "string",
              "description": "URL to source",
              "format": "uri"
            }
          }
        },
        {
          "type": "object",
          "description": "Reference to article in articles.json by PMID",
          "required": ["pmid"],
          "additionalProperties": false,
          "properties": {
            "pmid": {
              "type": "string",
              "description": "PubMed ID (must exist in articles.json)",
              "pattern": "^[0-9]+$"
            }
          }
        },
        {
          "type": "object",
          "description": "Non-indexed article reference (preprints, etc.)",
          "required": ["url", "author", "year", "title"],
          "additionalProperties": false,
          "properties": {
            "url": {
              "type": "string",
              "description": "URL to article",
              "format": "uri"
            },
            "author": {
              "type": "string",
              "description": "Author citation (e.g., 'Smith et al.')"
            },
            "year": {
              "type": "integer",
              "description": "Publication year"
            },
            "title": {
              "type": "string",
              "description": "Article title"
            }
          }
        }
      ]
    }
  }
}
