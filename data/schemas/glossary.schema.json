{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Glossary Database",
  "description": "Fitness and kinesiology terminology definitions",
  "type": "object",
  "required": ["glossary"],
  "properties": {
    "glossary": {
      "type": "object",
      "required": ["categories", "terms"],
      "properties": {
        "categories": {
          "type": "object",
          "description": "Category definitions",
          "additionalProperties": {
            "type": "string"
          }
        },
        "terms": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["term", "category", "description"],
            "properties": {
              "term": {
                "type": "string",
                "description": "Primary term name"
              },
              "aliases": {
                "type": "array",
                "description": "Alternative names or abbreviations",
                "items": {
                  "type": "string"
                }
              },
              "category": {
                "type": "string",
                "description": "Term category",
                "enum": ["basic", "anatomy", "movement", "programming", "technique", "kinesiology", "direction", "nutrition", "recovery"]
              },
              "description": {
                "type": "string",
                "description": "Brief plain-language definition (shown immediately)"
              },
              "details": {
                "type": "string",
                "description": "Extended explanation (shown under 'more details' fold)"
              },
              "references": {
                "type": "array",
                "description": "Source references",
                "items": {
                  "$ref": "#/definitions/reference"
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "reference": {
      "oneOf": [
        {
          "type": "object",
          "description": "External reference with source name",
          "required": ["source", "url"],
          "additionalProperties": false,
          "properties": {
            "source": {
              "type": "string",
              "description": "Source identifier (e.g., exrx, pubmed)"
            },
            "url": {
              "type": "string",
              "description": "URL to source",
              "format": "uri"
            }
          }
        },
        {
          "type": "object",
          "description": "PubMed-indexed article reference",
          "required": ["pmid", "author", "year", "title"],
          "additionalProperties": false,
          "properties": {
            "pmid": {
              "type": "string",
              "description": "PubMed ID",
              "pattern": "^[0-9]+$"
            },
            "author": {
              "type": "string",
              "description": "Author citation (e.g., 'Smith et al.')"
            },
            "year": {
              "type": "integer",
              "description": "Publication year"
            },
            "title": {
              "type": "string",
              "description": "Article title"
            }
          }
        },
        {
          "type": "object",
          "description": "Non-indexed article reference (preprints, etc.)",
          "required": ["url", "author", "year", "title"],
          "additionalProperties": false,
          "properties": {
            "url": {
              "type": "string",
              "description": "URL to article",
              "format": "uri"
            },
            "author": {
              "type": "string",
              "description": "Author citation (e.g., 'Smith et al.')"
            },
            "year": {
              "type": "integer",
              "description": "Publication year"
            },
            "title": {
              "type": "string",
              "description": "Article title"
            }
          }
        }
      ]
    }
  }
}
