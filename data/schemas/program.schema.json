{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Training Program",
  "description": "A user-defined workout program with multiple training days",
  "type": "object",
  "required": ["id", "name", "days"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier"
    },
    "name": {
      "type": "string",
      "description": "Program name",
      "minLength": 1
    },
    "days": {
      "type": "array",
      "description": "Training days in the program",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["exercises"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Optional day label (e.g., 'Push', 'Leg Day')"
          },
          "exercises": {
            "type": "array",
            "description": "Exercise IDs for this day",
            "items": {
              "type": "string",
              "description": "Reference to exercise definition ID"
            }
          }
        }
      }
    },
    "createdAt": {
      "type": "string",
      "description": "ISO 8601 timestamp of creation",
      "format": "date-time"
    }
  }
}
